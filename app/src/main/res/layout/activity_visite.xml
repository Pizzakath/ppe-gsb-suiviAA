<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Visite">

    <EditText
        android:id="@+id/visite_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Saisie de visite"
        android:gravity="center"
        android:textSize="32sp"/>

    <EditText
        android:id="@+id/visite_date"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/visite_titre"
        app:layout_constraintLeft_toLeftOf="@id/visite_titre"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="Date"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/visite_datePicker"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/visite_titre"
        app:layout_constraintRight_toRightOf="@id/visite_titre"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:text="Date"
        />

    <EditText
        android:id="@+id/visite_heure"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/visite_date"
        app:layout_constraintLeft_toLeftOf="@id/visite_titre"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Heure"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/visite_timePicker"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/visite_datePicker"
        app:layout_constraintRight_toRightOf="@id/visite_titre"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        />




</android.support.constraint.ConstraintLayout>
</layout>